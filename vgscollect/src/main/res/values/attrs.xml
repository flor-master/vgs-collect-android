<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="textSize" format="dimension"/>
    <attr name="hint" format="string"/>
    <attr name="textColor" format="color"/>

    <attr name="gravity">
        <flag name="top" value="0x30" />
        <flag name="bottom" value="0x50" />
        <flag name="left" value="0x03" />
        <flag name="right" value="0x05" />
        <flag name="center_vertical" value="0x10" />
        <flag name="fill_vertical" value="0x70" />
        <flag name="center_horizontal" value="0x01" />
        <flag name="fill_horizontal" value="0x07" />
        <flag name="center" value="0x11" />
        <flag name="fill" value="0x77" />
        <flag name="clip_vertical" value="0x80" />
        <flag name="clip_horizontal" value="0x08" />
        <flag name="start" value="0x00800003" />
        <flag name="end" value="0x00800005" />
    </attr>

    <attr name="textStyle">
        <flag name="normal" value="0" />
        <flag name="bold" value="1" />
        <flag name="italic" value="2" />
    </attr>

    <declare-styleable name="VGSEditText">
        <attr name="fieldName" format="string"/>

        <attr name="text" format="string"  localization="suggested"/>
        <attr name="textSize"/>
        <attr name="textColor" />
        <attr name="maxLines" format="integer"/>
        <attr name="minLines" format="integer"/>
        <attr name="ellipsize">
            <enum name="none" value="0" />
            <enum name="start" value="1" />
            <enum name="middle" value="2" />
            <enum name="end" value="3" />
            <enum name="marquee" value="4" />
        </attr>

        <attr name="textStyle" />

        <attr name="cursorVisible" format="boolean" />
        <attr name="singleLine" format="boolean" />
        <attr name="isRequired" format="boolean" />

        <attr name="gravity" />
        <attr name="scrollHorizontally" format="boolean" />

<!--        <attr name="password" format="boolean" />-->

        <attr name="hint" />

        <attr name="fieldType" format="enum">
            <enum name="cardNumber" value="0"/>
            <enum name="cardCVCNumber" value="1"/>
            <enum name="cardDate" value="2"/>
            <enum name="cardOwner" value="3"/>
            <enum name="info" value="4"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="VGSTextInputLayout">
        <attr name="hint" />
    </declare-styleable>
</resources>